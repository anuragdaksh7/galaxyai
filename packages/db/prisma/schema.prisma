generator client {
  provider = "prisma-client-js"
  binaryTargets = ["node", "rhel-openssl-3.0.x"]
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// schema.prisma

model Chat {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  cid       String    @unique
  userId    String?   
  name      String?
  messages  Message[]
  createdAt DateTime  @default(now())
}

model Message {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  mid       String      @unique
  content   String?
  timestamp DateTime
  role      MessageRole
  chatId    String      @db.ObjectId
  chat      Chat        @relation(fields: [chatId], references: [id])
  type      String?
}

enum MessageRole {
  user
  assistant
  system
  other
}
